{
	"id": "nodebb-plugin-42",
	"name": "42",
	"description": "some few extra settings for the NodeBB's header, footer etc.",
	"url": "https://github.com/akhoury/nodebb-plugin-42",
	"library": "./42.js",
	"staticDir": "./public",
	"css": [
		"css/default.css"
	],
	"hooks": [
		{ "hook": "filter:header.build", "method": "header", "callbacked": true },
		{ "hook": "filter:footer.build", "method": "footer", "callbacked": true },
		{ "hook": "filter:admin.header.build", "method": "admin.menu", "callbacked": false },
		{ "hook": "filter:admin.create_routes", "method": "admin.route", "callbacked": true },
		{ "hook": "action:plugin.activate", "method": "admin.activate" },
		{ "hook": "action:config.set", "method": "reload" }
	],

	"defaults": {
		"brandUrl": "",
		"headHtml": "",
		"links": [],
		"footerHtml": "",
		"copyright": "",
		"bodyAppend": ""
	}
}